{
    "manifest_version": 3,
    "name": "Google Meet Floating Bubbles",
    "version": "1.0.0",
    "description": "Widget de bulles flottantes pour Google Meet",
    "permissions": [
      "storage",
      "tabs",
      "scripting",
      "activeTab",
      "contextMenus",
      "alarms"
    ],
    "host_permissions": [
      "https://meet.google.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://meet.google.com/*"],
        "js": ["content.js"],
        "css": ["content.css"],
        "run_at": "document_end"
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "Toggle Floating Bubbles"
    },
    "web_accessible_resources": [
      {
        "resources": ["widget.html", "widget.js"],
        "matches": ["https://meet.google.com/*"]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }